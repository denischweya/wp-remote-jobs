{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "remjobs/job-list",
	"version": "1.0.0",
	"title": "Job List",
	"category": "widgets",
	"icon": "list-view",
	"description": "Display a list of job postings with filtering options.",
	"keywords": ["jobs", "listings", "careers", "employment"],
	"example": {},
	"supports": {
		"html": false,
		"align": ["wide", "full"]
	},
	"attributes": {
		"blockTitle": {
			"type": "string",
			"default": "Latest jobs"
		},
		"backgroundColor": {
			"type": "string",
			"default": "#f7f9fc"
		},
		"layout": {
			"type": "string",
			"default": "grid"
		},
		"jobsPerPage": {
			"type": "number",
			"default": 10
		},
		"showFilters": {
			"type": "boolean",
			"default": true
		},
		"showToggle": {
			"type": "boolean",
			"default": true
		},
		"postsPerPage": {
			"type": "number",
			"default": 10
		},
		"featuredOnly": {
			"type": "boolean",
			"default": false
		},
		"showCategoryFilter": {
			"type": "boolean",
			"default": true
		},
		"showLocationFilter": {
			"type": "boolean",
			"default": true
		},
		"showSkillsFilter": {
			"type": "boolean",
			"default": true
		},
		"showSearchFilter": {
			"type": "boolean",
			"default": true
		},
		"filterByCategory": {
			"type": "array",
			"default": []
		},
		"filterBySkills": {
			"type": "array",
			"default": []
		},
		"filterByLocation": {
			"type": "array",
			"default": []
		},
		"categories": {
			"type": "array",
			"default": []
		},
		"locations": {
			"type": "array",
			"default": []
		},
		"viewAllJobsPage": {
			"type": "number",
			"default": 0
		}
	},
	"textdomain": "remote-jobs",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
